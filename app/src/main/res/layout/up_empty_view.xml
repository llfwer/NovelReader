<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/up_empty_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/up_empty_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="--"
        android:textColor="@color/up_common_secondary_color"
        android:textSize="15sp" />

    <com.example.newbiechen.ireader.widget.UPStateTextView
        android:id="@+id/up_empty_button_view"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/up_common_button_round_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="--"
        android:textColor="@color/up_common_button_text_color_selector"
        android:textSize="18sp"
        android:visibility="gone" />

</merge>